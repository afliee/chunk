{
    "version": 2,
    "builds": [
        {
            "src": "./src/index.js",
            "use": "@now/node"
        },
        {
            "src": "**/*.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/src/index.js"
        }
    ]
}